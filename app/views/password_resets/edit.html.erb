<div id="edit_forgot">
  <% form_for @user, :url => password_reset_path, :method => :put do |f| %>
    <%= f.error_messages %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %><br/>
    <%= f.submit "" %>
  <% end %>
</div>