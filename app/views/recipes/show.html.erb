        <br/>
        <span class="redtitle" style="color:#99340b; font-size:20px;">How to make:</span><br />
        <br />
        <%=@recipe.how_to_make%>
      </div>
      
      <div class="comments_writeandsend" style="overflow:hidden;">
        <div class="titlecomment" style="margin:19px 0 6px 0;">
          <span class="redtitle" style="color:#99340b; font-size:20px;">Comments</span>
        </div>
        <%=render :partial => "/comments/new", :locals => {:recipe => @recipe}%>
      </div>
      <div id="source_comments">
        <% Comment.find(:all, :conditions => {:commentable_type => "recipe", :commentable_id => @recipe.id}).each do |comment| %>
          <%=render :partial => "/comments/comment", :locals => {:comment => comment}%>
        <% end %>
      </div>
    </div>
  </div>
  
