      <div class="img_content_cook" style="overflow:hidden; width:589px;">
        <div style="width:235px; height:250px;float:left;margin:18px 30px 0 0;">
          <div class="recipe_preview" style="width:235px;height:215px; border:1px solid #e7b36f;">
            <% if @recipe.image? %>
              <%= image_tag @recipe.image.url(:medium) %>
            <% else %>
              <%= image_tag "/images/no-image2.jpg" %>
            <% end %>
          </div>
          <div style="margin-top:10px;font-size:15px;">
            <%if @recipe.user == current_user%>
              <%=link_to image_tag("/images/edit_icon.png") + "edit", edit_recipe_path(@recipe), :style=>"color:#bb450f;"%>
            <%end%>
          </div>
        </div>
        <div class="cook_name" style="float:left; overflow:hidden; width:296px; margin-top:18px;">
          <div class="cookname" style="margin-bottom:12px;">
            <span style="color:#d58c4c; font-size:20px;">Title</span>
            <span style="float:right; font-size:15px; color:#aa6426;"><%=@recipe.title%></span>
          </div>
          <div class="mmmfactor" style="margin-bottom:12px;">
            <span style="color:#d58c4c; font-size:20px;">Mmm Factor</span>
            <span class="stars_rating" style="float:right;">
              <%= ratings_for @recipe, :dimension => :mmm_factor, :remote_options => {:url => rate_recipe_path(@recipe)} %>
            </span>
          </div>
          <div class="mmmfactor" style="margin-bottom:12px;">
            <span style="color:#d58c4c; font-size:20px;">Difficulty</span>
            <span class="stars_rating" style="float:right;">
              <%= ratings_for @recipe,:dimension => :difficulty, :remote_options => {:url => rate_recipe_path(@recipe)} %>
            </span>
          </div>
          <div class="difficulty" style="margin-bottom:12px;">
            <span style="color:#d58c4c; font-size:20px;">Author</span>
            <span style="float:right; font-size:15px; color:#aa6426;"><%=@recipe.author%></span>
          </div>
          <div class="server_quantity" style="margin-bottom:16px;">
            <span style="color:#d58c4c; font-size:20px;">Serves</span>
            <span style="float:right; font-size:15px; color:#aa6426;"><%=@recipe.serves%> Dishes</span>
          </div>
          <div class="text_loren">
            <span style="font-size:15px; color:#aa6426;"><%=@recipe.summary%></span>
          </div>
        </div>
      </div>
      <div class="recipe_continue" style="font-size:15px; color:#aa6426; line-height:16px; margin-top:10px;"> <span class="redtitle" style="color:#99340b; font-size:20px;">Ingredients:</span><br />
        <br />
        <%=@recipe.ingredients%>
