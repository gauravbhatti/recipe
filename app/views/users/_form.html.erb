<tr>
  <td><%= form.label :name %></td>
  <td><%= form.text_field :name %></td>
</tr>
<tr>
  <td><%= form.label :login %></td>
  <td><%= form.text_field :login %></td>
</tr>
<tr>
  <td><%= form.label :email %></td>
  <td><%= form.text_field :email %></td>
</tr>
<tr>
  <td><%= form.label :password, form.object.new_record? ? nil : "Change password" %></td>
  <td><%= form.password_field :password %></td>
</tr>
<tr>
  <td><%= form.label :password_confirmation %></td>
  <td><%= form.password_field :password_confirmation %></td>
</tr>
<tr>
  <td><%= form.label :state %></td>
  <td><%= form.text_field :state %></td>
</tr>
<tr>
  <td><%= form.label :country %></td>
  <td><%= localized_country_select(:user, :country, [], :include_blank => 'Please choose...') %></td>
</tr>
<tr>
  <td><%= form.label :gender %></td>
  <td><%= select :user, :gender, {:female=>false, :male=>true} %></td>
</tr>
<tr>
  <td><%= form.label :about_me %></td>
  <td><%= form.text_area :about_me, :size=>"26x3" %></td>
</tr>